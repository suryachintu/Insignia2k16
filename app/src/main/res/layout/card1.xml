<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/frame_layout">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/person_photo"
                android:layout_width="60dp"
                android:layout_height="67dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_account_circle_black_48dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_name"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/person_photo"
                android:textColor="@color/dialogHeader"
                android:layout_alignParentTop="true"
                android:text="Name"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_designation"
                android:layout_marginLeft="16dp"
                android:layout_below="@+id/person_name"
                android:layout_toRightOf="@+id/person_photo"
                android:textColor="@color/color_textHeaders"
                android:text="Name"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="3dp"
                android:id="@+id/im1"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/person_photo"
                android:layout_below="@+id/person_designation"
                android:src="@drawable/ic_contact_phone_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_contact"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2.8dp"
                android:textColor="@color/dialogHeader"
                android:autoLink="phone"
                android:layout_toRightOf="@+id/im1"
                android:layout_below="@+id/person_designation"
                android:text="9999999999"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_contact_mail_black_24dp"
                android:id="@+id/im2"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="16dp"
                android:layout_below="@id/im1"
                android:layout_toRightOf="@id/person_photo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_contact1"
                android:layout_toRightOf="@id/im2"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="3dp"
                android:autoLink="email"
                android:textColor="@color/dialogHeader"
                android:layout_below="@+id/person_contact"
                android:text="9999999999"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>